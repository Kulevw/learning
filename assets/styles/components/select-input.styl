.select
  position relative
  border 2px solid black
  cursor pointer
  font-size 20px

  &--multiple
    cursor text

  &--focus
    box-shadow 0 0 0 4px alpha(dodgerblue, .5)

  &__list

    position relative
    z-index 2
    overflow-y auto
    max-height 204px
    border-bottom 2px solid black
    border-left 2px solid black
    border-right 2px solid black
    list-style none
    padding-left 0
    background-color white

    &_wrapper
      position absolute
      inset calc(100% + 2px) -2px auto -2px
      z-index 1
      margin-bottom 15px

      &:before
        position absolute
        inset 4px -4px -4px -4px
        content ''
        background-color alpha(dodgerblue, .5)

  &__item
    min-height 40px
    display flex
    align-items center
    padding-left 14px
    padding-right 14px
    padding-top 8px
    padding-bottom 8px
    cursor pointer

    &--selected
      color dodgerblue

    &_check
      max-height 24px
      display flex
      align-items center
      margin-left auto

      & > svg
        display block

  &__inner
    min-height 36px
    display flex
    align-items center

  &__input
    width 100%
    height 100%
    padding 0
    border none
    background-color transparent
    font-size inherit

    &_label
      flex-grow 1
      flex-shrink 1

  &__value
    flex-grow 1
    flex-shrink 1

  &__toggle
    flex-shrink 0
    align-self center
    transition transform .15s

    & > svg
      display block

    &--opened
      transform rotateZ(180deg)
